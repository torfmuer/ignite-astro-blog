---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SOCIALS } from "@config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <div class="hero-card">
        <h1>Welcome!</h1>
        <p>
          Quick guides, seasonal checklists, and expert advice pulled straight
          from the Ignite field team. We’ll add new pieces as our crews tackle
          interesting jobs across Coeur d’Alene and Spokane.
        </p>
        {
          // only display if at least one social link is enabled
          socialCount > 0 && (
            <div class="social-wrapper">
              <div class="social-links">Social Links:</div>
              <Socials />
            </div>
          )
        }
      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <h2>Featured</h2>
            <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 min-[1024px]:grid-cols-3">
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts">
          <h2>Recent Posts</h2>
          <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 min-[1024px]:grid-cols-3">
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper">
      <LinkButton
        href="/posts/"
        className="inline-flex items-center gap-2 rounded-full border border-skin-line bg-skin-fill px-6 py-3 text-xs font-semibold uppercase tracking-[0.25em] text-skin-base/70 shadow-[0_15px_35px_rgba(15,23,42,0.08)] transition hover:border-skin-accent hover:text-skin-accent"
      >
        All Posts
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-6;
  }
  .hero-card {
    @apply rounded-3xl bg-gradient-to-br from-orange-500 via-orange-400 to-amber-300 px-6 py-10 text-skin-inverted shadow-[0_25px_60px_rgba(249,115,22,0.25)] sm:px-10 sm:py-14;
  }
  #hero h1 {
    @apply mb-4 text-4xl font-semibold sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply text-base text-white/85 sm:text-lg;
  }
  .social-wrapper {
    @apply mt-6 flex flex-col gap-2 sm:flex-row sm:items-center;
  }
  .social-links {
    @apply whitespace-nowrap text-xs font-semibold uppercase tracking-[0.3em] text-white/70;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl mb-5 font-semibold tracking-wide text-skin-base;
  }
  .all-posts-btn-wrapper {
    @apply my-10 text-center;
  }
</style>
