---
import LinkButton from "./LinkButton.astro";

export interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl: string;
  nextUrl: string;
}

const { currentPage, totalPages, prevUrl, nextUrl } = Astro.props;

const prev = currentPage > 1 ? "" : "disabled";
const next = currentPage < totalPages ? "" : "disabled";
---

{
  totalPages > 1 && (
    <nav class="pagination-wrapper" aria-label="Pagination">
      <LinkButton
        disabled={prev === "disabled"}
        href={prevUrl}
        className={`pagination-btn mr-4 select-none ${prev}`}
        ariaLabel="Previous"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class={`${prev}-svg`}>
          <path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z" />
        </svg>
        Prev
      </LinkButton>
      <span class="pagination-count">
        {currentPage} / {totalPages}
      </span>
      <LinkButton
        disabled={next === "disabled"}
        href={nextUrl}
        className={`pagination-btn ml-4 select-none ${next}`}
        ariaLabel="Next"
      >
        Next
        <svg xmlns="http://www.w3.org/2000/svg" class={`${next}-svg`}>
          <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
        </svg>
      </LinkButton>
    </nav>
  )
}

<style>
  .pagination-wrapper {
    @apply mb-12 mt-8 flex flex-wrap items-center justify-center gap-3 text-sm font-semibold text-skin-base/70;
  }
  .pagination-btn {
    @apply inline-flex items-center gap-2 rounded-full border border-skin-line bg-skin-fill px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-skin-base/70 shadow-[0_12px_25px_rgba(15,23,42,0.08)] transition hover:border-skin-accent hover:text-skin-accent;
  }
  .pagination-btn svg {
    @apply fill-skin-base;
  }
  .pagination-count {
    @apply rounded-full border border-skin-line bg-skin-fill/90 px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-skin-base/70;
  }
  .disabled {
    @apply pointer-events-none select-none opacity-50 hover:text-skin-base group-hover:fill-skin-base;
  }
  .disabled-svg {
    @apply group-hover:!fill-skin-base;
  }
</style>
